<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/_200sdp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <FrameLayout
        android:alpha="0"
        android:paddingTop="@dimen/_35sdp"
        android:background="#E6EEEEEE"
        android:id="@+id/flBottomRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvSearchHolder"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            app:cardCornerRadius="50dip"
            app:cardPreventCornerOverlap="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:background="@null"
                android:id="@+id/search"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:layout_gravity="center"
                android:hint="Search"
                android:textColorHint="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_size"/>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_30sdp"
            android:id="@+id/rv_app_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </FrameLayout>


    <LinearLayout
        android:paddingBottom="?actionBarSize"
        android:id="@+id/llPeak"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">
        <ImageView
            android:id="@+id/iv_1"
            android:layout_weight="1"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"/>
        <ImageView
            android:id="@+id/iv_2"
            android:layout_weight="1"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"/>
        <ImageView
            android:id="@+id/iv_3"
            android:layout_weight="1"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"/>
        <ImageView
            android:id="@+id/iv_4"
            android:layout_weight="1"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"/>
        <ImageView
            android:id="@+id/iv_5"
            android:layout_weight="1"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"/>
    </LinearLayout>

</FrameLayout>